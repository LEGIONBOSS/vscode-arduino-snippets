// Arduino Snippets
"Arduino skeleton": {
    "prefix": [
		"arduino",
		"setuploop"
	],
    "body": [
        "/*include statements*/",
        "",
        "void setup()",
        "{",
        "\t${1:/*setup code*/}",
        "}",
        "",
        "void loop()",
        "{",
        "\t${2:/*looping code*/}$0",
        "}"
    ],
    "description": "Insert setup and loop"
},
"Arduino skeleton with timer": {
    "prefix": [
        "arduino",
        "setuploop"
    ],
    "body": [
        "/*include statements*/",
        "",
        "#define timer 1000 // ms",
        "",
        "unsigned long timer_last = 0;",
        "unsigned long now;",
        "",
        "void setup()",
        "{",
        "\t${1:/*setup code*/}",
        "}",
        "",
        "void loop()",
        "{",
        "\t${2:/*looping code*/}",
        "",
        "\tnow = millis();",
        "\tif (now - timer_last >= timer)",
        "\t{",
        "\t\t${3:/*timed code*/}$0",
        "",
        "\t\ttimer_last = now;",
        "\t}",
        "}",
    ],
    "description": "Insert setup and loop with a timer"
},
